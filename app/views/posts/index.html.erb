<div class="row">
	<div class="col-12 mb-5">
		<table class="table">
			<thead>
				<th>ID</th>
				<th>Title</th>
				<th>Actions</th>
			</thead>
			<tbody>
				<% if @posts.any? %>
					<% @posts.each do |post| %>
						<tr>
							<td><%= post.id %></td>
							<td><%= post.title %></td>
							<td><%= link_to "Edit", edit_post_path(post), class: "btn" %></td>
						</tr>
					<% end %>
				<% else %>
					<td colspan="3">No Posts Found: <%= link_to "Add new", new_post_path %></td>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<% end %>
